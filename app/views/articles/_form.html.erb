<%= form_with model: article do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title, placeholder: 'Título do Artigo', class: 'form-control', required: true %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div class="mt-5" >
      <%= form.label :body %><br>
      <%= form.text_area :body, placeholder: 'Conteúdo da artigo', class: 'form-control', required: true %><br>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="mt-3 float-start" >
      <%= form.label :status %><br>
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>
  
    <div class="float-end mt-5" >
      <%= form.submit %>
    </div>
<% end %>
  