<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>

<div class="container" >
  <div class="row">
    <div>
      <p>
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>
    </div>
    <div>
      <p>
        <%= link_to 'Destroy Comment', [comment.article, comment],
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
      </p>
    </div>
  </div>
</div>